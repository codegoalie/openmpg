=content_for :title do
  %h1 Sign in

= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-inline'}) do |f|
  =f.email_field :email, {class: 'input-small', placeholder: 'Email', tabindex: 1}

  =f.password_field :password, {class: 'input-small', placeholder: 'Password', tabindex: 2}

  = f.submit "Sign in", tabindex: 5

  -if devise_mapping.rememberable?
    %br
    = f.check_box :remember_me, checked: 'checked', tabindex: 4
    = f.label :remember_me


= render "devise/shared/links"
